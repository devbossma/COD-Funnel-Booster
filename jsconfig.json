{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "jsx": "react",
        "checkJs": false,
        "allowJs": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules", "build"]
}